{
  "name": "@domicile/legacy",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/legacy/src",
  "targets": {
    "build": {
      "executor": "@nx-plus/vue:browser",
      "options": {
        "dest": "dist/apps/legacy",
        "index": "apps/legacy/public/index.html",
        "main": "apps/legacy/src/main.ts",
        "tsConfig": "apps/legacy/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "mode": "production",
          "filenameHashing": true,
          "productionSourceMap": true,
          "css": {
            "extract": true,
            "sourceMap": false
          }
        }
      }
    },
    "serve": {
      "executor": "@nx-plus/vue:dev-server",
      "options": {
        "browserTarget": "legacy:build",
        "proxyConfig": "apps/legacy/proxy.conf.json"
      },
      "configurations": {
        "production": {
          "browserTarget": "legacy:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/legacy/**/*.{ts,tsx,vue}"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/legacy/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}