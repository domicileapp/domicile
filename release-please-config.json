{
  "group-pull-request-title-pattern": "chore: release ${version}",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Refactors",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "Performance improvements",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug fixes",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Chores",
      "hidden": false
    },
    {
      "type": "build",
      "section": "Build & tests",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": false
    }
  ],
  "draft": false,
  "token": "${{secrets.TOKEN}}",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "extra-files": [
    {
      "type": "json",
      "path": "api/package.json",
      "jsonpath": "$.version"
    },
    {
      "type": "json",
      "path": "app/package.json",
      "jsonpath": "$.version"
    },
    {
      "type": "json",
      "path": "docs/package.json",
      "jsonpath": "$.version"
    }
  ],
  "pull-release-header": "Automated release PR",
  "packages": {
    ".": {
      "package-name": "@domicile/core",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    },
    "web": {
      "package-name": "@domicile/web",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    },
    "api": {
      "package-name": "@domicile/api",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    },
    "cli": {
      "package-name": "@domicile/cli",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    },
    "k8s": {
      "package-name": "@domicile/infra",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    },
    "docs": {
      "package-name": "@domicile/docs",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    }
  }
}