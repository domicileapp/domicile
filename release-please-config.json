{
  "group-pull-request-title-pattern": "chore: release ${version}",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Refactors",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "Performance improvements",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug fixes",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Chores",
      "hidden": false
    },
    {
      "type": "build",
      "section": "Build",
      "hidden": false
    },
    {
      "type": "ci",
      "section": "Build",
      "hidden": false
    },
    {
      "type": "tests",
      "section": "Tests",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": false
    }
  ],
  "draft": false,
  "token": "${{secrets.TOKEN}}",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "extra-files": [
    {
      "type": "json",
      "path": "apps/api/package.json",
      "jsonpath": "$.version"
    },
    {
      "type": "json",
      "path": "apps/web/package.json",
      "jsonpath": "$.version"
    },
    {
      "type": "json",
      "path": "libs/auth/package.json",
      "jsonpath": "$.version"
    },
    {
      "type": "json",
      "path": "libs/common/package.json",
      "jsonpath": "$.version"
    },
    {
      "type": "json",
      "path": "libs/core/package.json",
      "jsonpath": "$.version"
    }
  ],
  "pull-release-header": "Automated release PR",
  "packages": {
    ".": {
      "package-name": "domicile",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    },
    "apps/web": {
      "package-name": "domicile-web",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    },
    "apps/api": {
      "package-name": "domicile-api",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "pull-request-header": "Automated release PR"
    }
  }
}
