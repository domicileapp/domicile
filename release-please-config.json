{
  "group-pull-request-title-pattern": "chore: release ${component} ${version}",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Refactors",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Fixes",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Miscellaneous",
      "hidden": false
    },
    {
      "type": "infra",
      "section": "Infrastructure",
      "hidden": false
    }
  ],
  "draft": false,
  "token": "${{secrets.TOKEN}}",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "extra-files": [
    {
      "type": "json",
      "path": "api/package.json",
      "jsonpath": "$.version"
    },
    {
      "type": "json",
      "path": "app/package.json",
      "jsonpath": "$.version"
    }
  ],
  "packages": {
    "api": {
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "versioning": "default",
      "prerelease": true,
      "pull-request-title-pattern": "chore${scope}: release ${component} ${version}"
    }
  }
}